<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cell_height"
    android:layout_marginBottom="@dimen/quote_marginbottom"
    >

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="@dimen/quote_height"
        android:layout_margin="0dp"

        >
        <ImageView
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_height"
            android:scaleType="fitXY"
            android:background="@android:color/background_light"/>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:layout_marginTop="0dp"

            android:orientation="horizontal" >
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Like"

                android:paddingLeft="17dp"
                android:layout_marginLeft="-4.5dp"
                android:layout_marginRight="-5dp"
                android:background="@android:color/darker_gray"
                android:textSize="10dp"
                android:fontFamily="@string/abc_search_hint" />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Comment"
                android:layout_marginLeft="-4.5dp"
                android:layout_marginRight="-5dp"
                android:gravity="center"
                android:background="@android:color/darker_gray"
                android:textSize="10dp"
                android:fontFamily="@string/abc_search_hint" />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Share"
                android:layout_marginLeft="-4.5dp"
                android:layout_marginRight="-5dp"
                android:gravity="center"
                android:background="@android:color/darker_gray"
                android:textSize="10dp"
                android:fontFamily="@string/abc_search_hint" />
        </LinearLayout>

    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="53.33dp"
        android:layout_height="53.33dp"


        android:layout_marginLeft="@dimen/avatar_marginLeft"
        android:layout_marginTop="@dimen/avatar_marginTop"
        android:src="@drawable/avatar"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/username_margintop"
        android:layout_marginLeft="@dimen/username_marginleft"
        android:text="UserName"
        android:gravity="center"


        />


</FrameLayout>